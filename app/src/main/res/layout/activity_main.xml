<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ajay.speechrecognise.MainActivity">


    <EditText
        android:id="@+id/resutlView"
        android:layout_width="213dp"
        android:layout_height="124dp"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="52dp"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/voiceIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/voice_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="8dp"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:adjustViewBounds="true"
        app:layout_constraintHorizontal_bias="0.485" />

    <TextView
        android:id="@+id/confidenceScores"
        android:layout_width="219dp"
        android:layout_height="32dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/continue_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cotinue"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="323dp"
        android:layout_marginLeft="69dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/stop_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="323dp"
        android:layout_marginLeft="227dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
